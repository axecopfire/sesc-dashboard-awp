color-primary-blue = rgba(0, 40, 89, 1)
color-bg-black = lighten(black, 30%)
    
body
    background-image url('img/background-2.jpg')
    background-repeat no-repeat
    background-size cover
    height 100vh
header
    width 100%
    display block
    min-width 320px
    position relative
    z-index 99
    top 0
    box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.5);
p
    margin-bottom 1rem

a
    color inherit
    &:hover
        cursor pointer
    

.topHeader
    background-color color-primary-blue
    width 100%

.logo 
    img
        height: 100px
    

.burger-icon
    right 20px
    bottom 50%
    transform translateY(50%)
    position absolute
    display inline-block
    span
        background-color white
        width 40px
        height 3px
        margin 10px
        border-radius 10px
        display block

.sidebar
    display block 
    position absolute
    height 100vh
    width 30%
    z-index 100
    margin-left -100%
    background-color lighten(color-bg-black, 60%)
    transition margin-left 0.5s ease
    li:hover
        background-color lighten(color-primary-blue, 40%)
        border-radius 5px
    .sb-header
        width 100%
        background-color color-primary-blue
        display block
    img
        height 100px
    ul
        margin 5px
    li
        list-style-type none
        padding 10px
        display block
        border-radius 5px

        a
            color black

    &.active
        margin-left 0
@media(max-width: 500px)
    .sidebar
        width 40%
    
    

.dimmer
    z-index 0
    &.active
        z-index 99
        position fixed
        background-color color-primary-blue
        width 100vw
        height 100vh
        opacity 0.9


/* Widgets */

.bluf, .widget-contact
    background-color lighten(black, 60%)
    color color-primary-blue
    border-radius 5px
    margin 20px
    padding 20px
    h2
        font-weight bold
        text-align center
    p 
        font-size 24px

.crisis
    background-color white
    border-radius 5px
    padding 5px

.twitter-widget 
    height 75vh
    overflow scroll
    width 100%
    margin-top 20px
    padding: 1px
    background lighten(color-bg-black, 40%)
    border-radius 5px


.twitter-feed
    border solid 2px lighten(color-bg-black, 20%)


.tweetCont
    margin 10px
    display block
    background-color white
    padding 5px
    border-radius 5px
    box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.5);
    img
        float left
        width 20%
        border-radius 50%
        box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.5);
    @media (min-width: 1000px)
        img
            float none
        

    p:first-child
        display inline-block
        font-size 24px
        font-weight bold
        padding 10px
    p:last-child
        padding 5px
        display inline-block

.widget-employment
    border-radius 5px
    padding 20px
    background-color lighten(color-bg-black, 40%)
    margin 40px
    form
        input
            display block        
    img
        width 100%
        border-radius 5px
    
.widget-contact
    background-color lighten(color-bg-black, 40%)
    text-align center
    padding 20px

.widget-colab
    img
        width 100%
        margin 20px
        border-radius 5px

    